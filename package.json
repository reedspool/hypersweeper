{
  "name": "minesweeper-hypermedia",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "run-server": "bun run index.ts",
    "run-server:dev": "bun run --watch --no-clear-screen index.ts",
    "build-frontend": "bun build service-worker-registrar.ts service-worker.ts browserEntry.ts --target=browser --outdir=public",
    "build-frontend:dev": "bun build service-worker-registrar.ts service-worker.ts browserEntry.ts --target=browser --outdir=public --watch --no-clear-screen"
  },
  "devDependencies": {
    "@types/bun": "^1.1.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2"
  }
}
